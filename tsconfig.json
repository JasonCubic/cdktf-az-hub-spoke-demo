{
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2018"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2020",
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "assets": [
    "src/**/*.template"
  ],
  "include": [
    "src/**/*",
    "src/**/.*",
  ],
  "exclude": [
    "node_modules",
    "cdktf.out",
    ".eslintrc.cjs",
    ".github"
  ]
}
